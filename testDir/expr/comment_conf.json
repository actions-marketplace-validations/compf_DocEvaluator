{
    "include":["*.java"],
    "exclude":[],
    "metrics":[
        {"metric_name":"simple_comment",
        "weight":1,
        "unique_name":"m1",
        "params":{"ignore_getters_setters":false}
        },
        {"metric_name":"public_members_only","weight":5,"unique_name":"m2"},
        {"metric_name":"large_method_commented","weight":1,"unique_name":"m3"}
    ],
    "absolute_threshold":15,
    "builder":"weighted_mean_builder",
    "component_weights":[
        {
            "name":"ClassComponent",
            "weight":5
        },
        {
            "name":"SingleMemberComponent",
            "weight":2
        }
    ],
    "path_weights":[
        {
            "path":"*commented_class.*","weight":4
        }
        
    ],

    "relative_threshold":100
}